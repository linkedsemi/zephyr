#include <linkedsemi/le501x.dtsi>
#include <zephyr/dt-bindings/pinctrl/ls-pinctrl.h>

&pinctrl {
	/* UART1 */
	/omit-if-no-ref/uart1_tx_pb00: uart1_tx_pb00 {
		pinmux = <LS_PINMUX_SET('B', 00, AF_UART1_TXD)>;
        output-enable;
        output-high;

	};
	/omit-if-no-ref/uart1_rx_pb01: uart1_rx_pb01 {
		pinmux = <LS_PINMUX_SET('B', 01, AF_UART1_RXD)>;
        bias-pull-up;
		input-enable;
	};

	/* UART2 */
	/omit-if-no-ref/uart2_tx_pb00: uart2_tx_pb00 {
		pinmux = <LS_PINMUX_SET('B', 00, AF_UART2_TXD)>;
        output-enable;
        output-high;
	};
	/omit-if-no-ref/uart2_rx_pb01: uart2_rx_pb01 {
		pinmux = <LS_PINMUX_SET('B', 01, AF_UART2_RXD)>;
        bias-pull-up;
		input-enable;
	};

	/* UART3 */
	/omit-if-no-ref/uart3_tx_pb00: uart3_tx_pb00 {
		pinmux = <LS_PINMUX_SET('B', 00, AF_UART3_TXD)>;
        output-enable;
        output-high;
	};
	/omit-if-no-ref/uart3_rx_pb01: uart3_rx_pb01 {
		pinmux = <LS_PINMUX_SET('B', 01, AF_UART3_RXD)>;
        output-enable;
        output-high;
	};

	/* I2C1 */
	/omit-if-no-ref/i2c1_scl_pa05: i2c1_scl_pa05 {
		pinmux = <LS_PINMUX_SET('A', 05, AF_I2C1_SCL)>;
		bias-pull-up;
		input-enable;
	};
	/omit-if-no-ref/i2c1_sda_pa06: i2c1_sda_pa06 {
		bias-pull-up;
		pinmux = <LS_PINMUX_SET('A', 06, AF_I2C1_SDA)>;
		input-enable;
	};

	/* I2C2 */
	/omit-if-no-ref/i2c2_scl_pa05: i2c2_scl_pa05 {
		pinmux = <LS_PINMUX_SET('A', 05, AF_I2C2_SCL)>;
		bias-pull-up;
		input-enable;
	};
	/omit-if-no-ref/i2c2_sda_pa06: i2c2_sda_pa06 {
		bias-pull-up;
		pinmux = <LS_PINMUX_SET('A', 06, AF_I2C2_SDA)>;
		input-enable;
	};

	/* SPI2 */
    /omit-if-no-ref/spi2_sck_pb12: spi2_sck_pb12 {
		pinmux = <LS_PINMUX_SET('B', 12, AF_SPI2_SCK)>;
        bias-pull-down;
		output-enable;
        output-low;
	};

    /omit-if-no-ref/ spi2_nss_pb13: spi2_nss_pb13 {
		pinmux = <LS_PINMUX_SET('B', 13, AF_SPI2_NSS)>;
		bias-pull-up;
        output-enable;
        output-high;
	};

    /omit-if-no-ref/spi2_mosi_pb14: spi2_mosi_pb14 {
        pinmux = <LS_PINMUX_SET('B', 14, AF_SPI2_MOSI)>;
        output-enable;
        output-high;
    };

    /omit-if-no-ref/ spi2_miso_pb15: spi2_miso_pb15 {
        pinmux = <LS_PINMUX_SET('B', 15, AF_SPI2_MISO)>;
        input-enable;
    };
};
